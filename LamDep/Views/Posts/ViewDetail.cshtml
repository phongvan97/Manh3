@model Post
@{
    ViewBag.Title = "ViewDetail";
}
@{
    var sameCategory = ViewBag.sameCategory as List<Post>;
    var latest = ViewBag.latest as List<Post>;
    var mostView = ViewBag.mostView as List<Post>;
    var categories = ViewBag.categories as List<Category>;
}
<div class="single-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="sn-container">
                    <div class="sn-img">
                        <img src="@Model.Image" />
                    </div>
                    <div class="sn-content">
                        <h1 class="sn-title">@Model.Title</h1>
                        @Html.Raw(Model.Content)
                    </div>
                </div>
                <div class="sn-related">
                    <h2>Related News</h2>
                    <div class="row sn-slider">
                        @foreach (var post in sameCategory)
                        {
                            <div class="col-md-4">
                                <div class="sn-img">
                                    <img src="@post.Image" height="150" />
                                    <div class="sn-title">
                                        <a href="@Url.Action("ViewDetail","Posts",new { area="", postId = post.PostId})">@post.Title</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <h2 class="sw-title">In This Category</h2>
                        <div class="news-list">
                            @foreach (var post in sameCategory)
                            {
                                <div class="nl-item">
                                    <div class="nl-img">
                                        <img src="@post.Image" height="65" />
                                    </div>
                                    <div class="nl-title">
                                        <a href="@Url.Action("ViewDetail","Posts",new { area="", postId = post.PostId})">@post.Title</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <div class="image">
                            <a href="https://htmlcodex.com"><img src="img/ads-2.jpg" alt="Image"></a>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <div class="tab-news">
                            <ul class="nav nav-pills nav-justified">

                                <li class="nav-item ">
                                    <a class="nav-link active" data-toggle="pill" href="#popular">Popular</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#latest">Latest</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div id="popular" class="container tab-pane active">
                                    @foreach (var post in mostView)
                                    {
                                        <div class="tn-news">
                                            <div class="tn-img">
                                                <img src="@post.Image" height="65" />
                                            </div>
                                            <div class="tn-title">
                                                <a href="@Url.Action("ViewDetail","Posts",new { area="", postId = post.PostId})">@post.Title</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div id="latest" class="container tab-pane fade">
                                    @foreach (var post in latest)
                                    {
                                        <div class="tn-news">
                                            <div class="tn-img">
                                                <img src="@post.Image" height="65" />
                                            </div>
                                            <div class="tn-title">
                                                <a href="@Url.Action("ViewDetail","Posts",new { area="", postId = post.PostId})">@post.Title</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <div class="image">
                            <a href="https://htmlcodex.com"><img src="img/ads-2.jpg" alt="Image"></a>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <h2 class="sw-title">News Category</h2>
                        <div class="category">
                            <ul>
                                @foreach (var cate in categories)
                                {
                                    <li><a href="">@cate.CategoryName</a><span>(@cate.Posts.Count)</span></li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <div class="image">
                            <a href="https://htmlcodex.com"><img src="img/ads-2.jpg" alt="Image"></a>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <h2 class="sw-title">Tags Cloud</h2>
                        <div class="tags">
                            <a href="">National</a>
                            <a href="">International</a>
                            <a href="">Economics</a>
                            <a href="">Politics</a>
                            <a href="">Lifestyle</a>
                            <a href="">Technology</a>
                            <a href="">Trades</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

