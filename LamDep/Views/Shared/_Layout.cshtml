<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap News Template - Free HTML Templates</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Bootstrap News Template - Free HTML Templates" name="keywords">
    <meta content="Bootstrap News Template - Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/adminLte/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/newsTemplate/lib/slick/slick.css" rel="stylesheet" />
    <link href="~/Assets/newsTemplate/lib/slick/slick-theme.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/Assets/newsTemplate/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Top Bar Start -->
   
    <div class="top-bar">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-black p-0">

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class=" navbar-nav mr-auto">
                        <li class="nav-item">
                            <span class="nav-link"><i class="fas fa-envelope"></i>info@mail.com</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link"><i class="fas fa-phone-alt"></i>+012 345 6789</span>
                        </li>
                    
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item ">
                                <a class="nav-link " href="@Url.Action("Index", "UsersAdmin", new { area = "Identity" })" >
                                    Admin Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>

        </div>

    </div>
    <!-- Top Bar Start -->
    <!-- Brand Start -->
    <div class="brand">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4">
                    <div class="b-logo">
                        <a href="index.html">
                            <img src="~/Assets/newsTemplate/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="b-ads">
                        <a href="https://htmlcodex.com">
                            <img src="~/Assets/newsTemplate/img/ads-1.jpg" alt="Ads">
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4">
                    <div class="b-search">
                        <input type="text" placeholder="Search">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Brand End -->
    <!-- Nav Bar Start -->
    <div class="nav-bar">
        <div class="container">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                <a href="#" class="navbar-brand">MENU</a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto">
                        <a href="index.html" class="nav-item nav-link active">Home</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Danh mục</a>
                            <div class="dropdown-menu">
                                @Html.Action("LoadCategories","Home",new { area=""})
                            </div>
                        </div>
                       
                    </div>
                    <div class="social ml-auto">
                        <a href=""><i class="fab fa-twitter"></i></a>
                        <a href=""><i class="fab fa-facebook-f"></i></a>
                        <a href=""><i class="fab fa-linkedin-in"></i></a>
                        <a href=""><i class="fab fa-instagram"></i></a>
                        <a href=""><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Nav Bar End -->
    @RenderBody()
    @Html.Partial("_PartialFooter")
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="~/Assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/Assets/adminLte/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/newsTemplate/lib/easing/easing.js"></script>
    <script src="~/Assets/newsTemplate/lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Assets/newsTemplate/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

